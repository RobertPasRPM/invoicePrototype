@model IEnumerable<InvoicePrototype.Models.Item>

<ul class="mdc-list mdc-list--two-line" style="float:left;max-height:300px;overflow:scroll;width:30%;">
    @foreach(var item in Model){
        <li class="mdc-list-item" id="@item.Id"> 
            <span class="mdc-list-item__text">
                @item.Description
                <span class="mdc-list-item__secondary-text">
                @item.UnitPrice
                </span>
            </span>
        </li>
    }
</ul>

<div style="float:left;width:70%;">
    <table style="width:100%">
        <thead>
            <tr>
                <th>Item</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Tax (%)</th>
                <th>Total Tax</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
